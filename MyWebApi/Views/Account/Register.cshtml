@model MyWebApiView.Authentification.UserRegistration
@{
    ViewData["Title"] = "Регистрация";
}

<div align="center" class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Регистрация</h3>

            <form asp-action="Register" asp-antiforgery="true" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <p><input asp-for="LoginProp" class="form-control" placeholder="Логин" /></p>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <p><input asp-for="Password" class="form-control" placeholder="Пароль" /></p>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <p><input asp-for="ConfirmPassword" class="form-control" placeholder="Продублируйте пароль" /></p>
                    </div>
                </div>

                <div class="text-center col-xs-12">
                    <p><button type="submit" class="btn btn-default">Зарегистрироваться</button></p>
                </div>
            </form>

        </div>
    </div>
</div>
