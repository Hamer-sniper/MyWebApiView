@if (User.Identity.IsAuthenticated)
{
    <div class="btn-group pull-right">        
        <form method="post" asp-controller="Account" asp-action="Logout" id="logoutform" asp-antiforgery="true">
            @if (User.IsInRole("Admin"))
            {
                <a class="navbar-brand" href="/Roles">Управление ролями</a>
            }
            <a>&nbsp;&nbsp;&nbsp;</a>
            <a class="navbar-brand" href="#">@User.Identity.Name в системе</a>
            <a>&nbsp;&nbsp;&nbsp;</a>
            <a class="navbar-brand" href="#" onclick="document.getElementById('logoutform').submit()">Выход</a>
        </form>
    </div>
}
else
{
    <div class="btn-group pull-right">
        <form method="post" asp-controller="Account" asp-action="Login" id="loginform" asp-antiforgery="true">
            <a class="navbar-brand" href="#" onclick="document.getElementById('loginform').submit()">Вход</a>
        </form>
        <a>&nbsp;&nbsp;&nbsp;</a>
        <form method="post" asp-controller="Account" asp-action="Register" id="registerform" asp-antiforgery="true">
            <a class="navbar-brand" href="#" onclick="document.getElementById('registerform').submit()">Регистрация</a>
        </form>
    </div>
}


