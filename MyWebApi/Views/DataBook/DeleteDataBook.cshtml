@model DataBook
@{
    ViewData["Title"] = "EditDataBook";
}

@using (Html.BeginForm("DeleteDataFromField", "DataBook", FormMethod.Post))
{
    <div align="center" class="card col-md-12">
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Surname, "Фамилия")
            <br />
            @Html.DisplayFor(m => m.Surname)
        </p>
        <p>
            @Html.LabelFor(m => m.Name, "Имя")
            <br />
            @Html.DisplayFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.MiddleName, "Отчество")
            <br />
            @Html.DisplayFor(m => m.MiddleName)
        </p>
        <p>
            @Html.LabelFor(m => m.TelephoneNumber, "Номер телефона")
            <br />
            @Html.DisplayFor(m => m.TelephoneNumber)
        </p>
        <p>
            @Html.LabelFor(m => m.Adress, "Адрес")
            <br />
            @Html.DisplayFor(m => m.Adress)
        </p>
        <p>
            @Html.LabelFor(m => m.Note, "Описание")
            <br />
            @Html.DisplayFor(m => m.Note)
        </p>
        <p><input type="submit" value="Подтвердите удаление записи" /></p>
        <form method="get">
            <button type="submit" asp-controller="DataBook" asp-action="Index">К общему списку</button>
        </form>
    </div>
}
